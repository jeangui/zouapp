Package.describe({
  summary: "Recline.js : librairie for manipulating grid, map, timeline,...",
  internal: true
});

Package.on_use(function (api, where) {
  api.add_files([
    'recline.js',
    'recline.css',
    'recline.dataset.js',
    'g.dot.js',
    'g.line.js',
    'g.pie.js',
    'meteor_charts.js'
  ], 'client');
});
