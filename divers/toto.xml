<template name="annonces_creation_tpl">
	<div class="container">
		<div class="hero-unit">
			<h1>Création d'annonces ...</h1>
		</div>
		<div class="container">
			<div class="span6">
				<form class="form-horizontal" style="background-color: white;line-height: 1;border: 1px solid #DDD;-webkit-border-radius: 4px;-moz-border-radius: 4px;border-radius: 4px;-webkit-box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075);-moz-box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075);">
				<legend>Formulaire de création d'annonce</legend>
				  <div class="control-group">
				    <label class="control-label" for="annonces-titre-input">Titre</label>
				    <div class="controls">
				      <input id="annonces-titre-input" type="text" placeholder="titre de l'annonce..." class="input-medium"></input>
				    </div>
				  </div>
				  <div class="control-group">
				    <label class="control-label" for="annonces-description-input">Description</label>
				    <div class="controls">
				      <textarea id="annonces-description-input" type="text" placeholder="description de l'annonce..."></textarea>
				    </div>
				  </div>
				  <div class="control-group">
				    <label class="control-label" for="annonces-startdate-input">Date de début</label>
				    <div class="controls">
				      <input id="annonces-startdate-input" type="text" placeholder="date de démarrage de l'annonce..."></input>
				    </div>
				  </div>
				  <div class="control-group">
				    <label class="control-label" for="annonces-enddate-input">Date de fin</label>
				    <div class="controls">
				      <input id="annonces-enddate-input" type="text" placeholder="date de fin de l'annonce..."></input>
				    </div>
				  </div>
				  <div class="control-group">
				    <label class="control-label" for="annonces-echeance-input">Echeance</label>
				    <div class="controls">
				      <input id="annonces-echeance-input" type="text" placeholder="echeance de l'annonce..."></input>
				    </div>
				  </div>
				  <!--<div class="control-group">
				    <label class="control-label" for="annonces-emplacement-input">Emplacement</label>
				    <div class="controls">
				      <input id="annonces-emplacement-input" type="text" placeholder="{{location}}"></input>
				      <input id="annonces-emplacement-input" type="text" placeholder="{{location.longitude}}"></input>
				    </div>
				  </div>-->
				  <div class="control-group">
				    <label class="control-label" for="annonces-themes-input">Thèmes</label>
				    <div class="controls">
				      <input id="annonces-themes-input" type="text" placeholder="Thèmes de l'annonce..."></input>
				    </div>
				  </div>
				  <div class="control-group">
				    <label class="control-label" for="annonces-createur-input">Créateur de l'annonce</label>
				    <div class="controls">
				      <input id="annonces-createur-input" type="text" placeholder="({{currentUser._id}})"></input>
				    </div>
				  </div>
				  <div class="control-group">
				    <label class="control-label" for="annonces-statut-input">Statut de l'annonce</label>
				    <div class="controls">
				      <select id="annonces-statut-input">
						  <option>active</option>
						  <option>desactive</option>
						  <option>archive</option>
						</select>
				    </div>
				  </div>
				  <div class="control-group">
				    <label class="control-label" for="annonces-type-input">Type de l'annonce</label>
				    <div class="controls">
				    	<select id="annonces-type-input">
						  <option>information</option>
						  <option>produit</option>
						  <option>service</option>
						</select>
				    </div>
				  </div>
				  <div class="control-group">
				    <label class="control-label" for="annonces-objet-input">Objet de l'annonce</label>
				    <div class="controls">
				      <select id="annonces-objet-input">
						  <option>demande</option>
						  <option>offre</option>
						</select>
				    </div>
				  </div>
				  <div class="control-group">
				  	<div class="controls">
				  		<button type="submit" class="btn">Submit</button>
				  	</div>
				  </div>
				</form>
			</div>
		</div>
	</div>
</template>
